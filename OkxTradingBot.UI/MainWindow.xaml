<Window x:Class="OkxTradingBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trading Bot" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Current Price:" Margin="10" />
        <TextBlock Text="{Binding CurrentPrice}" Margin="120,10,72,290"/>

        <Button Content="Start Trading" Command="{Binding StartTradingCommand}" Margin="28,81,185,137"/>
        <Button Content="Button" Command="{Binding ExportCommand}" HorizontalAlignment="Left" Margin="120,245,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
